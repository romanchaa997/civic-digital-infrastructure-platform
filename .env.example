# Application Environment Configuration
# Copy this file to .env and configure with your actual values

# Server Configuration
PORT=3000
NODE_ENV=production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# OpenAI API Configuration
# Get your API key from https://platform.openai.com/account/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Blockchain RPC URLs (Testnet)
# Sepolia Testnet RPC
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Mumbai Testnet RPC
MUMBAI_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Arbitrum Goerli Testnet RPC
ARBITRUM_GOERLI_RPC_URL=https://arb-goerli.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Blockchain Deployment Configuration
# Private key for contract deployment (use environment variable, NEVER hardcode in .env)
DEPLOYMENT_PRIVATE_KEY=0xyour-private-key-here

# Security Configuration
# API Key for rate limiting and authentication
API_KEY_SECRET=your-super-secret-api-key-here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=100

# Audit Service Configuration
AUDIT_CACHE_TTL=300000
AUDIT_MAX_FILE_SIZE=5242880

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
